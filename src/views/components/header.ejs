<%# Header component %>
<header class="bg-white shadow-lg">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex justify-between">
      <div class="flex space-x-7">
        <a href="/" class="flex items-center py-4">
          <span class="font-semibold text-gray-500 text-xl">Todo App</span>
        </a>
      </div>
      <% if (typeof user !== 'undefined') { %>
        <div class="flex items-center space-x-3">
          <span class="text-gray-500">Welcome, <%= user.username %></span>
          <a href="/auth/logout" class="py-2 px-4 bg-red-500 hover:bg-red-600 text-white rounded">Logout</a>
        </div>
      <% } %>
    </div>
  </div>
</header>